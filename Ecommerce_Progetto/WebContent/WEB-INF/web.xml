<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
		  <display-name>Storage</display-name>
  <welcome-file-list>
    <welcome-file>ProductView.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>JNDI reference to a data source</description>
    <res-ref-name>jdbc/storage</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>ProdottoControl</servlet-name>
    <servlet-class>control.ProdottoControl</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>control.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>PlaceOrderControl</servlet-name>
  	<servlet-class>control.PlaceOrderControl</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UserControl</servlet-name>
  	<servlet-class>control.UserControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProdottoControl</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>PlaceOrderControl</servlet-name>
  	<url-pattern>/placeOrder</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UserControl</servlet-name>
  	<url-pattern>/userSettings</url-pattern>
  </servlet-mapping>
</web-app>