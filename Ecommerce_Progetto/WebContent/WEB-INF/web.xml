  </servlet>
  <servlet>
    <servlet-name>ProductViewControl</servlet-name>
    <servlet-class>control.ProductViewControl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddToCartControl</servlet-name>
    <servlet-class>control.AddToCartControl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RemoveFromCartControl</servlet-name>
